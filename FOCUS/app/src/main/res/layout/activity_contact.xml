<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="abdelsattar.com.focusII.Activties.TopTasks">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">

        <TextView
            android:id="@+id/TopThreeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="Contact With"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/PersonOneLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TopThreeTv">

            <TextView
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TopThreeTv"
                android:layout_margin="7dp"
                android:text="1-"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/_1stPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TopThreeTv"
                android:layout_margin="7dp"
                android:layout_toRightOf="@+id/one"
                android:text="1st Person"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/EditPersonOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TopThreeTv"
                android:layout_margin="7dp"
                android:layout_toRightOf="@+id/Top3_one"
                android:src="@android:drawable/ic_menu_edit" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/PersonTwoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PersonOneLayout">

            <TextView
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="2-"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/_2ndPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Top3_one"
                android:layout_margin="7dp"
                android:layout_toRightOf="@+id/one"
                android:text="2nd Person"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/EditPersonTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EditPersonOne"
                android:layout_margin="7dp"
                android:layout_toRightOf="@+id/_2ndPerson"

                android:src="@android:drawable/ic_menu_edit" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/PersonThirdLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PersonTwoLayout">


            <TextView
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="3-"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/_3rdPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/_2ndPerson"
                android:layout_margin="7dp"
                android:layout_toRightOf="@+id/one"
                android:text="3rd Person"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/EditPersonThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/_2ndPerson"
                android:layout_margin="7dp"
                android:layout_toRightOf="@+id/_3rdPerson"
                android:src="@android:drawable/ic_menu_edit" />
        </LinearLayout>
    </RelativeLayout>


    <com.google.android.gms.ads.AdView
        android:id="@+id/Contact_adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />
</RelativeLayout>
