<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="abdelsattar.com.focus.Activties.TopTasks">

    <TextView
        android:id="@+id/TopThreeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Top Three Tasks"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TopThreeTv"
        android:id="@+id/linearLayoutOne">


        <TextView
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TopThreeTv"
            android:layout_margin="7dp"
            android:text="1-"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Top3_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TopThreeTv"

            android:layout_margin="7dp"
            android:layout_toRightOf="@+id/one"
            android:text="Top 1"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/EditOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TopThreeTv"
            android:layout_margin="7dp"
            android:layout_toRightOf="@+id/Top3_one"
            android:src="@android:drawable/ic_menu_edit" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutOne"
        android:id="@+id/linearLayoutTwo"
        >

        <TextView
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/one"
            android:layout_margin="7dp"
            android:text="2-"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/_2ndPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Top3_one"
            android:layout_margin="7dp"
            android:layout_toRightOf="@+id/one"
            android:text="Top 2"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/EditTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/EditPersonOne"
            android:layout_margin="7dp"
            android:layout_toRightOf="@+id/_2ndPerson"

            android:src="@android:drawable/ic_menu_edit" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutTwo"
        android:id="@+id/linearLayoutThree">

        <TextView
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/two"
            android:layout_margin="7dp"
            android:text="3-"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/_3rdPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/_2ndPerson"
            android:layout_margin="7dp"
            android:layout_toRightOf="@+id/one"
            android:text="Top 3"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/EditThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/_2ndPerson"
            android:layout_margin="7dp"
            android:layout_toRightOf="@+id/_3rdPerson"
            android:src="@android:drawable/ic_menu_edit" />

    </LinearLayout>

</RelativeLayout>
